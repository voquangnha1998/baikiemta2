<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridviewdata">


        <androidx.cardview.widget.CardView
            android:id="@+id/CardView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"

                android:src="@drawable/bl1"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/idttchinh"
            android:layout_width="160dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Balo nam thời trang"
            android:layout_below="@+id/CardView"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/idttphu"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Chocolate Brown"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/idttchinh" />

        <RatingBar
            android:id="@+id/rate"
            style="@android:style/Widget.Holo.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idttphu"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:numStars="5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:progressTint="#E1B634"
            android:rating="3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/rate"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:id="@+id/idgia"
                android:text="475.000 VND"
                android:textSize="17dp"
                android:paddingLeft="50dp"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_below="@+id/idthaotac"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_morevert"/>

        </LinearLayout>
        </LinearLayout>
</LinearLayout>